		"_collection_link": "https://noru-0-4673020.postman.co/workspace/21642497-493a-44d0-849d-f0266a8dfa9c/collection/44486773-edbebffa-2539-4121-9506-1b4e2cfde8ec?action=share&source=collection_link&creator=44486773"
	},
	"item": [
		{
			"name": "Login API Test - Data Driven",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseData = pm.response.json();",
							"const expectedStatus = parseInt(pm.iterationData.get(\"expected_status\"));",
							"",
							"pm.test(`Status code is ${expectedStatus}`, function () {",
							"    pm.expect(pm.response.code).to.eql(expectedStatus);",
							"});",
							"",
							"if (expectedStatus === 200) {",
							"    pm.test(\"Response has required fields\", function () {",
							"        pm.expect(responseData).to.have.all.keys('access_token', 'token_type', 'expires_in');",
							"    });",
							"",
							"    pm.test(\"Access token must be a non-empty string\", function () {",
							"        pm.expect(responseData.access_token).to.be.a('string').and.to.have.lengthOf.above(0);",
							"    });",
							"",
							"    pm.test(\"Token type must be a non-empty string\", function () {",
							"        pm.expect(responseData.token_type).to.be.a('string').and.to.have.lengthOf.at.least(1);",
							"    });",
							"",
							"    pm.test(\"Expires_in must be a positive integer\", function () {",
							"        pm.expect(responseData.expires_in).to.be.a('number').and.to.be.above(0);",
							"    });",
							"} else if (expectedStatus === 401) {",
							"    pm.test(\"Response contains the required error field\", function () {",
							"        pm.expect(responseData).to.have.property('error');",
							"    });",
							"",
							"    pm.test(\"Error message must be a non-empty string\", function () {",
							"        pm.expect(responseData.error).to.be.a('string').and.to.have.lengthOf.at.least(1);",
							"    });",
							"",
							"    pm.test(\"Content-Type is application/json\", function () {",
							"        const contentType = pm.response.headers.get(\"Content-Type\");",
							"        pm.expect(contentType).to.include(\"application/json\");",
							"    });",
							"",
							"    pm.test(\"Response time is less than 200ms\", function () {",
							"        pm.expect(pm.response.responseTime).to.be.below(200);",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/users/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"login"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8091"
		}
	]
}
