{
  "info": {
    "name": "API Test - GET /categories",
    "_postman_id": "categ1234-5678-90ab-cdef-9876543210ff",
    "description": "Postman collection for testing GET /categories API with data-driven input.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /categories - Data Driven Test",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/categories",
          "host": ["{{base_url}}"],
          "path": ["categories"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "let url = pm.variables.get(\"base_url\") + '/categories';",
              "if (data.by_category_slug && data.by_category_slug !== '') {",
              "    url += '?by_category_slug=' + encodeURIComponent(data.by_category_slug);",
              "}",
              "pm.request.url = url;",
              "if (data.method && data.method !== '') {",
              "    pm.request.method = data.method.toUpperCase();",
              "}"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is as expected\", function () {",
              "    pm.response.to.have.status(parseInt(data.ExpectedStatus));",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.practicesoftwaretesting.com"
    }
  ]
}
