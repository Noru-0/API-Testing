{
  "info": {
    "_postman_id": "get-products-collection-id",
    "name": "Get Products API Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Products - Data Driven",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/products?by_brand={{by_brand}}&by_category={{by_category}}&is_rental={{is_rental}}&between={{between}}&sort={{sort}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "products"
          ],
          "query": [
            {
              "key": "by_brand",
              "value": "{{by_brand}}"
            },
            {
              "key": "by_category",
              "value": "{{by_category}}"
            },
            {
              "key": "is_rental",
              "value": "{{is_rental}}"
            },
            {
              "key": "between",
              "value": "{{between}}"
            },
            {
              "key": "sort",
              "value": "{{sort}}"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log(' TestCase:', data.TestCaseID);",
              "",
              "pm.test(\"Status code is \" + data.ExpectedStatus, function () {",
              "    const expected = parseInt(data.ExpectedStatus);",
              "    pm.expect(pm.response.code).to.equal(expected);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
